<h2><%= @user.name %></h2>
<div class="column is-one-third">
  <% if @user.hosted_events.any? %>
    <% @user.hosted_events.each do |event| %>
      <div class="card">
        <div class="card-image">
          <figure class="image is-2by1">
            <img src="https://bulma.io/images/placeholders/640x320.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= event.name %></strong>
                  <br>
                  <%= event.description %>
                  <br>
                  <small><%= event.location %> Â· <%= event.date.strftime("%-d/%-m/%y %H:%M") %></small>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>