<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-two-thirds">
        <div class="card">
          <div class="card-image">
            <figure class="image image is-3by1">
              <img src="https://bulma.io/images/placeholders/720x240.png">
            </figure>
          </div>
          <div class="card-content">
            <h1 class="title is-2"><%= @event.name %></h1>
            <div class="media">
              <div class="media-content">
                <label class="label">About this event</label>
                <p><%= simple_format(@event.description) %></p>
                <br>
                <p class="control">
                  <% unless current_user.attended_events.include?(@event) %>
                    <%= simple_form_for(@signup) do |f| %>
                      <%= f.hidden_field :event_attendee_id, :value => current_user.id %>
                      <%= f.hidden_field :attended_event_id, :value => @event.id %>
                      <%= f.submit 'Join event', class: "button is-info" %>
                    <% end %>
                  <% else %>
                    <p class="has-text-success">You are signed up for this event!</p>
                  <% end %>
                </p>
              </div>
              <div class="media-right">
                <p><label class="label">Hosted by</label><%= @event.host.name %></p>
                <br>
                <p><label class="label">Date and time</label><%= @event.date %></p>
                <br>
                <p><label class="label">Location</label><%= @event.location %></p>
              </div>
            </div>
          </article>
        </div>
			</div>
		</div>
	</div>
</div>


    
