<div class="column is-one-third">
  <div class="card">
    <div class="card-image">
      <%= link_to event do %>
        <figure class="image is-2by1">
          <img src="https://bulma.io/images/placeholders/640x320.png" alt="Placeholder image">
        </figure>
      <% end %>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <div class="content">
            <p>
              <%= link_to event do %>
                <strong class="title is-4"><%= event.name %></strong>
              <% end %>
              <br>
              <%= event.date.try(:strftime, ("%-d/%-m/%y %H:%M")) %>
              <br><br>
              <%= truncate event.description, length: 100 %>
              <br>
              <small>
                <span class="icon no-pad"><i class="fas fa-user" aria-hidden="true"></i>&nbsp;</span><%= event.host.name %> Â· 
                <span class="icon no-pad"><i class="fas fa-map-marker-alt" aria-hidden="true"></i></span>
                <% if !user_signed_in? || (current_user.attended_events.include?(event) || event.host==current_user || event.private==false) %>
                  <%= event.location %>
                <% else %>
                  Private
                <% end %>
              </small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>